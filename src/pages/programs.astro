---
import BaseLayout from '../layouts/Baselayout.astro';

const programs = [
  {
    title: "Feeding Program",
    image: "/feeding.jpg",
    alt: "Children receiving meals through NALEA's Feeding Program",
    description: "We provide nutritious meals to street-connected and vulnerable children across Kenya, ensuring they have the energy to learn, grow, and thrive.",
    link: "/feeding"
  },
  {
    title: "Rehabilitation",
    image: "/rehab.jpg",
    alt: "Therapist assisting child in rehabilitation session",
    description: "Offering physiotherapy, speech therapy, occupational therapy, and assistive technology services to support people with special needs.",
    link: "/rehab"
  },
  {
    title: "Disability Awareness",
    image: "/disability.jpg",
    alt: "Community event promoting disability awareness",
    description: "Raising awareness and fostering inclusion for individuals with disabilities through education and community engagement.",
    link: "/disability"
  },
  {
    title: "IT Skills Training",
    image: "/skills.jpg",
    alt: "Youth learning computer skills in training session",
    description: "Equipping youth with computer and digital literacy skills to prepare them for sustainable careers in a digital world.",
    link: "/skills"
  },
  {
    title: "Menstrual Hygiene",
    image: "/hygiene.jpg",
    alt: "Girls receiving menstrual hygiene education and supplies",
    description: "Providing education and sanitary products to girls, ensuring they can manage their periods with dignity and stay in school.",
    link: "/hygiene"
  },
  {
    title: "Clothing Support",
    image: "/clothing.jpg",
    alt: "Children receiving clothing donations",
    description: "Distributing clothing to vulnerable children and families to protect their dignity and well-being.",
    link: "/clothing"
  }
];
---

<BaseLayout title="Our Programs - NALEA Initiative">
  <!-- Hero Section -->
  <section class="relative min-h-[50vh] bg-cover bg-center flex items-center justify-center text-white text-center bg-no-repeat" 
    style={{ backgroundImage: "url('/programs-hero.jpg')" }}>
    <div class="absolute inset-0 bg-black/60 z-0"></div>
    <div class="relative z-10 px-4 sm:px-6 max-w-full sm:max-w-3xl lg:max-w-4xl mx-auto">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 drop-shadow-lg">
        Our Programs
      </h1>
      <p class="mt-4 text-base sm:text-lg md:text-xl drop-shadow-md max-w-2xl">
        Discover the ways we’re making a difference in the lives of Kenya’s most vulnerable children and communities.
      </p>
    </div>
  </section>

  <!-- Programs List -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 py-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {programs.map(program => (
        <article class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform hover:scale-105 flex flex-col">
          <img 
            src={program.image} 
            alt={program.alt} 
            class="w-full h-56 object-cover"
            loading="lazy"
          />
          <div class="p-4 sm:p-6 flex flex-col flex-grow">
            <h2 class="text-xl font-semibold text-indigo-600 mb-3">{program.title}</h2>
            <p class="text-gray-600 mb-4 flex-grow">{program.description}</p>
            <a 
              href={program.link} 
              class="inline-block bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-500 transition-colors text-center"
            >
              Learn More
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-indigo-50 py-16 px-4 sm:px-6 text-center">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-indigo-700 mb-6">
        Support Our Programs
      </h2>
      <p class="text-base sm:text-lg text-gray-700 mb-8">
        Your contribution helps us expand our reach and deepen our impact. Join us in transforming lives today.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-6">
        <a 
          href="/donate" 
          class="inline-block bg-indigo-600 text-white px-6 sm:px-8 py-3 rounded-lg hover:bg-indigo-500 transition-colors"
        >
          Donate Now
        </a>
        <a 
          href="/get-involved" 
          class="inline-block bg-white border-2 border-indigo-600 text-indigo-600 px-6 sm:px-8 py-3 rounded-lg hover:bg-indigo-50 transition-colors"
        >
          Volunteer
        </a>
      </div>
    </div>
  </section>
</BaseLayout>