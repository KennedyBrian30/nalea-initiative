---
import BaseLayout from '../layouts/BaseLayout.astro';

const programs = [
  {
    title: "Feeding Program",
    image: "/feeding.jpg",
    alt: "Children receiving meals through NALEA's Feeding Program",
    description: "Providing nutritious meals to street-connected and vulnerable children across Kenya."
  },
  {
    title: "Rehabilitation",
    image: "/rehab.jpg",
    alt: "Therapist assisting child in rehabilitation session",
    description: "Offering physio, speech, OT and assistive tech services for people with special needs."
  },
  {
    title: "Skills Training",
    image: "/skills.jpg",
    alt: "Youth learning computer skills in training session",
    description: "Equipping youth with computer and digital literacy skills for sustainable futures."
  }
];
---

<BaseLayout title="Home - NALEA Initiative">
  <!-- Hero Section -->
  <section 
    class="relative min-h-[70vh] bg-cover bg-center flex items-center justify-center text-white text-center bg-no-repeat"
    style={{
      backgroundImage: "url('/hero.jpg')",
      backgroundAttachment: 'fixed'
    }}
  >
    <div class="absolute inset-0 bg-black/50 z-0"></div>
    <div class="relative z-10 px-4 max-w-3xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-lg">
        Together, We Uplift Kenya’s Most Vulnerable
      </h1>
      <p class="mt-4 text-lg md:text-xl drop-shadow-md">
        Empowering children and people with special needs through love, care, and practical support.
      </p>
      <a 
        href="/get-involved" 
        class="mt-6 inline-block bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-500 transition-colors"
      >
        Join Us
      </a>
    </div>
  </section>

  <!-- Programs Section -->
  <section class="max-w-7xl mx-auto px-4 py-16" id="programs">
    <h2 class="text-3xl font-bold text-center text-indigo-700 mb-12">Our Programs</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {programs.map(program => (
        <div class="bg-white shadow-md rounded-lg overflow-hidden transition-transform hover:scale-105">
          <img 
            src={program.image} 
            alt={program.alt} 
            class="w-full h-48 object-cover"
            loading="lazy"
          />
          <figcaption class="p-6">
            <h3 class="text-lg font-semibold text-indigo-600">{program.title}</h3>
            <p class="mt-2 text-gray-600">{program.description}</p>
          </figcaption>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <a 
        href="/programs" 
        class="inline-block bg-indigo-600 text-white px-8 py-3 rounded-lg hover:bg-indigo-500 transition-colors"
      >
        Explore All Programs
      </a>
    </div>
  </section>

  <!-- Impact Section -->
  <section class="bg-indigo-50 py-16 px-4">
    <div class="max-w-6xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-indigo-700 mb-8">Impact So Far</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mt-8">
        <div class="flex flex-col items-center">
          <h3 class="text-4xl font-bold text-indigo-600">10,000+</h3>
          <p class="mt-2 text-gray-600 max-w-xs">Meals served to children in vulnerable areas</p>
        </div>
        <div class="flex flex-col items-center">
          <h3 class="text-4xl font-bold text-indigo-600">500+</h3>
          <p class="mt-2 text-gray-600 max-w-xs">Children reached with disability support and rehab</p>
        </div>
        <div class="flex flex-col items-center">
          <h3 class="text-4xl font-bold text-indigo-600">200+</h3>
          <p class="mt-2 text-gray-600 max-w-xs">Youth trained in computer and digital literacy</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Join Our Mission Section -->
  <section class="text-center py-16 px-4">
    <h2 class="text-3xl font-bold text-indigo-700 mb-6">Join Our Mission</h2>
    <p class="max-w-2xl mx-auto text-gray-700 text-lg">
      Whether you donate, volunteer, or spread the word — you are part of the change. Together we can build a better future for every child.
    </p>
    <div class="mt-8 space-x-6">
      <a 
        href="/get-involved" 
        class="inline-block bg-indigo-600 text-white px-8 py-3 rounded-lg hover:bg-indigo-500 transition-colors"
      >
        Get Involved
      </a>
      <a 
        href="/donate" 
        class="inline-block bg-white border-2 border-indigo-600 text-indigo-600 px-8 py-3 rounded-lg hover:bg-indigo-50 transition-colors"
      >
        Donate Now
      </a>
    </div>
  </section>
</BaseLayout>